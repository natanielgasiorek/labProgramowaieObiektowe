<dx:ThemedWindow
    x:Class="Sklep_Zoologiczny.Widoki.Usuwanie_produktu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Usuwanie_produktu" Height="500" Width="500"
    >

    <Grid>
        <Label Content="Usuń produkt:" HorizontalAlignment="Left" Margin="18,34,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ComboBox x:Name="ComboBox_usun_produkt" HorizontalAlignment="Left" Margin="130,34,0,0" VerticalAlignment="Top" Width="232" SelectedItem="{Binding ID_Produktu}" DisplayMemberPath="Nazwa_produktu"/>
        <dx:SimpleButton x:Name="Zapisz_usuwanie_produktu" Content="Zapisz" HorizontalAlignment="Left" Height="34" Margin="190,103,0,0" VerticalAlignment="Top" Width="113" Glyph="{dx:DXImage SvgImages/XAF/Action_SaveScript.svg}" Click="Zapisz_usuwanie_produktu_Click"/>

    </Grid>
</dx:ThemedWindow>
