<dx:ThemedWindow
    x:Class="Sklep_Zoologiczny.Widoki.Edytowanie_producenta"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    Title="Edytowanie_producenta" Height="500" Width="500"
    >

    <Grid>
        <dx:SimpleButton x:Name="Zapisz_edytowanie_nazwy_producenta" Content="Zapisz" HorizontalAlignment="Center" Height="46" Margin="0,147,0,0" VerticalAlignment="Top" Width="142" Glyph="{dx:DXImage SvgImages/XAF/Action_SaveScript.svg}" Click="Zapisz_edytowanie_nazwy_producenta_Click"/>
        <ComboBox x:Name="ComboBox_wybierz_producenta" HorizontalAlignment="Left" Margin="161,38,0,0" VerticalAlignment="Top" Width="246" SelectedItem="{Binding ID_Producenta}" DisplayMemberPath="Nazwa_producenta" SelectionChanged="ComboBox_wybierz_producenta_SelectionChanged"/>
        <Label Content="Wybierz producenta:" HorizontalAlignment="Left" Margin="24,38,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="Nowa nazwa producenta:" HorizontalAlignment="Left" Margin="24,79,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="Wpisz_nowa_nazwe_producenta" HorizontalAlignment="Left" Margin="186,79,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="243"/>

    </Grid>
</dx:ThemedWindow>
